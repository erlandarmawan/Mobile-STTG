<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:weightSum="10"
    tools:context="uas.ppb.mobile_sttg.fasilitas">

    <GridLayout
        android:id="@+id/maingrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="1">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambar3"
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="150dp"
                    android:src="@drawable/fasilitas" />

                <Button
                    android:id="@+id/fasilitas10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="73dp"
                    android:layout_marginRight="80dp"
                    android:background="#94E0EE"
                    android:text="Detail"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="47dp" />

                <LinearLayout
                    android:id="@+id/linier3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/gambar3">

                    <ScrollView
                        android:id="@+id/scrooll2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="306dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gambar3"
                            android:text="Fasilitas Belajar Mengajar \n
* Tersedia ruang kelas yang refresentatif \n
* Jaringan internet yang memadai \n
* Lab B.Inggris \n
* Lab Komputer \n
* Lab Multimedia \n
* Lab Rekayasa Perangkat Lunak \n
* Lab Robotik \n
* Lab Jaringan Komputer \n
* Lab Sistem Produksi \n
* Lab Analisis Perancangan Kerja \n
* Lab Perancangan Tata Letak Fasilitas \n
* Lab Aspal \n
* Lab Beton \n
* Lab Mekanika Tanah \n
* Lab Ilmu Ukur Tanah \n "
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>
</LinearLayout>

